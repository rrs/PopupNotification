<Window x:Class="PopupNotification.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PopupNotification"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Notification Settings" Height="180" Width="600"
        WindowStartupLocation="CenterScreen"
        SizeToContent="Height"
        Icon="emmanuel.ico">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Select notification monitor:"/>
            <ComboBox x:Name="MonitorSelector" DisplayMemberPath="DeviceName" />

            <TextBlock Text="Notification font size:" Margin="0,10,0,0"/>
            <Slider x:Name="FontSizeSlider" Minimum="10" Maximum="40" IsSnapToTickEnabled="True" TickFrequency="1" />
            <TextBlock Text="{Binding ElementName=FontSizeSlider, Path=Value}" HorizontalAlignment="Center"/>

            <TextBlock Text="Notification duration (seconds):" Margin="0,10,0,0"/>
            <Slider x:Name="DurationSlider" Minimum="1" Maximum="60" IsSnapToTickEnabled="True" TickFrequency="1" />
            <TextBlock Text="{Binding ElementName=DurationSlider, Path=Value}" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
