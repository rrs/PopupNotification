<Window x:Class="PopupNotification.SendMessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PopupNotification"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Message"
        SizeToContent="WidthAndHeight"
        MinWidth="600"
        Icon="emmanuel.ico">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <TextBox x:Name="Message" FontSize="16" AcceptsReturn="True" />
        <Button Grid.Column="1" Command="{local:NotificationCommand}" CommandParameter="{Binding Text, ElementName=Message}">Send</Button>
    </Grid>
</Window>
