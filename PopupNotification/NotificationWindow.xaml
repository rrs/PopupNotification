<Window x:Class="PopupNotification.NotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PopupNotification"
        mc:Ignorable="d"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        WindowState="Normal" ResizeMode="NoResize">
    <Grid>
        <Border Background="{StaticResource MaterialDesignPaper}"
                VerticalAlignment="Bottom" HorizontalAlignment="Center"
                Margin="16" Padding="16" CornerRadius="5">
            <TextBlock Name="Message"
                       FontSize="{Binding Source={x:Static local:AppSettings.FontSize}}"/>
        </Border>
    </Grid>
</Window>
